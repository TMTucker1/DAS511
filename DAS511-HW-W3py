import numpy as np


print("Week 3 DAS 511 Homework")
print("Lets play a numbers game")
print("You will input a series of numbers and I will complete calcuations")
mylist = []

  #First set of numbers
a = int(input("Please enter number 1: "))
mylist.append(a)
b = int(input("Please enter number 2: "))
mylist.append(b)
c = int(input("Please enter number 3: "))
mylist.append(c)

print(mylist)

  #More or no?
def prompt1 (): 
  answer = input("Would you like to enter more? yes/no " ).lower #make lower for consistency
  if answer == 'yes' or answer == 'y':
      d = int(input("Please enter number 4: "))
      mylist.append(d)
      e = int(input("Please enter number 5: "))
      mylist.append(e)
      f = int(input("Please enter number 6: "))
      mylist.append(f)    
  else:
    print("Moving on to the calcuations")
  return 
prompt1()


#multiplication
def multiplyList(mylist):
  result = 1
  for x in mylist:
    result = result * x
  return result  

m = multiplyList(mylist)


#Sum
def sum(mylist):
  result1 = 1
  for x in mylist:
    result1 = result1 + x
  return result1
s = sum(mylist)

#Subtracted
def subtract(mylist):
  result2 = 1
  for x in mylist:
    result2 = result2 - x
  return result2
sub = subtract(mylist)

print("---------------------------------")
print("The numbers you chose, ", mylist)
print("Multiplied together: ", m)
print("Added together: ", s)
print("Subtracted: ", sub)
